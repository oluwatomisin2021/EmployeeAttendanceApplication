@page
@model EmployeeAttendanceApplication.Pages.EmployeeList.UpsertModel

<h2 class="text-info">@(Model.Employee.Id != 0 ? "Edit" : "Create") Employee</h2>
<br />



<div class="border container" style="padding: 30px">
    <form method="post">
        @if(Model.Employee.Id != 0)
            {
                <input type="hidden" asp-for="Employee.Id" />
            }
        
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employee.FirstName">First Name</label>
            </div>
            <div class="col-6">
                <input class="col-12" asp-for="Employee.FirstName" />
            </div>
            <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employee.LastName">Last Name</label>
            </div>
            <div class="col-6">
                <input class="col-12" asp-for="Employee.LastName" />
            </div>
            <span asp-validation-for="Employee.LastName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employee.Address">Address</label>
            </div>
            <div class="col-6">
                <input class="col-12" asp-for="Employee.Address" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Employee.PhoneNumber">Phone Number</label>
            </div>
            <div class="col-6">
                <input class="col-12" asp-for="Employee.PhoneNumber" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Employee.Id != 0?"Save Edit" : "Add Employee")</button>
            </div>
            <div class="col-3">
                <a asp-page="List" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
