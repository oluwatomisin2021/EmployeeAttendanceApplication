@page
@model EmployeeAttendanceApplication.Pages.EmployeeList.EditRoleModel


<h1 class="text-info">Edit Role</h1>

<form method="post" class="mt-3">
    
    <input type="hidden" asp-for="EditRoles.Id" />
    
    <div class="form-group row"> 
        <label asp-for="EditRoles.Name" class="col-sm-2 col-form-label">Role Name</label>
        <div class="col-sm-10">
            <input asp-for="EditRoles.Name" class="form-control" />
            <span asp-validation-for="EditRoles.Name" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-primary" asp-page="RoleList">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users == null)
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">No user has this role</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-page="EditUsersInRole" asp-route-id="@Model.EditRoles.Id" class="btn btn-primary">Add or Remove User</a>
        </div>
    </div>
    
</form>