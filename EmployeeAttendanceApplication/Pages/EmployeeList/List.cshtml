@page
@model EmployeeAttendanceApplication.Pages.EmployeeList.ListModel

<h1 class="text-info">Employees</h1>
<br />

<div class="col-3">
    <a asp-page="Create" class="btn btn-primary form-control text-white">Add New Employee</a>
</div>


<div class="col-12 border p-3 mt-3">
    <form method="post">
        @if (Model.Employees.Count()>0) 
        {
            <table class="table table-stripped border">
                <tr>
                    <th>
                        <label asp-for="Employees.FirstOrDefault().FirstName">First Name</label>
                    </th>
                    <th>
                        <label asp-for="Employees.FirstOrDefault().LastName">Last Name</label>
                    </th>
                    <th>
                        <label asp-for="Employees.FirstOrDefault().PhoneNumber">Phone Number</label>
                    </th>
                    <th>
                        <label asp-for="Employees.FirstOrDefault().Email">Email</label>
                    </th>
                    <th>
                        <label asp-for="Employees.FirstOrDefault().Address">Address</label>
                    </th>
                </tr>
                @foreach (var employee in Model.Employees)
                {
                    <tr>
                        <td>@Html.DisplayFor(e => employee.FirstName)</td>
                        <td>@Html.DisplayFor(e => employee.LastName)</td>
                        <td>@Html.DisplayFor(e => employee.PhoneNumber)</td>
                        <td>@Html.DisplayFor(e => employee.Email)</td>
                        <td>@Html.DisplayFor(e => employee.Address)</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@employee.Id" class="btn btn-success btn-sm text-white" style="margin-right: 20px">Edit</a>

                            @*<a asp-page="Details" asp-route-id="@employee.Id" class="btn btn-primary btn-sm text-white" style="margin-right: 20px">Details</a>*@
                            <button asp-page-handler="Delete" asp-route-id="@employee.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this?')">Delete</button>
                        </td>
                    </tr>
                }
                <tr>

                </tr>
            </table>
        }
    </form>
    
</div>
