@page
@model EmployeeAttendanceApplication.Pages.EditUsersInRoleModel
@{
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users from this roles</h2>
        </div>
        <div class="card-body">
            @if (Model.Users != null)
            {
                @foreach (var user in Model.Users)
                {
                    <div class="form-check m-1">
                        <input asp-for="@user.Email" type="checkbox" class="form-check-input" />
                        <label class="form-check-label" asp-for="@user.Email"></label>
                    </div>
                }
            }
            else
            {

            }

        </div>
    </div>
</form>