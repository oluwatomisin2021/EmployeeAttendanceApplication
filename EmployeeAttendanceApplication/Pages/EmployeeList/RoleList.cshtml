@page
@model EmployeeAttendanceApplication.Pages.RoleListModel
@{
}

<h1 class="text-info">New Roles</h1>
<br />


<div class="col-3">
    <a class="btn btn-primary mb-3" asp-page="Role">Add New Role</a>
</div>

@if (Model.RolesList != null)
{
    foreach (var role in Model.RolesList)
    {
        <div class="card mb-3">
            <div class="card-header">
                Role Id: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-page="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger ml-1">Delete</a>
            </div>

        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Here
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button below to create a new role</h5>
            <a asp-page="Role" class="btn btn-primary">Create Role</a>
        </div>
    </div>
}